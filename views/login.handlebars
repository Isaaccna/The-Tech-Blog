<div  id="logindiv">
<div class="form-div">
<form class="login-form">
    <h2 class="text-center m-3">Login</h2>
  <div>
    <label for="email-login">Email:</label>
    <input type="text" id="email-login" />
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button type="submit">Login</button>
  </div>
  <a href="#signupdiv" id="signup">Sign up instead</a>
</form>
</div>
</div>

<div class="add-form"  id="signupdiv">
<div class="form-div">

<form class="signup-form">
    <h2 class="text-center m-3">Sign Up</h2>
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" />
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="text" id="email-signup" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button type="submit">Signup</button>
  </div>
  <a href="#logindiv" id="login">Login instead</a>
</form>

</div>
</div>
<script src="/javascript/login.js"></script>  
